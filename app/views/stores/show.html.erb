
<div class="retail-show panel panel-default">
  
  <div class="panel-heading">
    <h2>
     <%= @store.name %>
    </h2>
  </div>

  <div class="panel-body clearfix">
    <div class="logo pull-left">
      <p>
        <%= image_tag @store.logo.url(:medium) %>
      </p>
    </div>
    <div class="information pull-left">
      <p class="address">
        <%= @store.address+", "+@store.postcode+" "+@store.town %>
      </p>

      <p>
        <strong>Téléphone :</strong>
        <%= @store.phonenumber %>
      </p>

      <% if user_signed_in? %>
        <p>
          <strong>Email :</strong>
          <%= @store.email %>
        </p>

        <p>
          <strong>Nom du gérant :</strong>
          <%= @store.name_shopper %>
        </p>
      <% end %>

      <p>
        <strong>Activité :</strong>
        <%= @store.activity %>
      </p>
    </div>
  </div>
  
  <% if user_signed_in? %>
    <div class="panel-footer">
      <%= link_to 'Modifier', edit_store_path(@store) %> |
      <%= link_to 'Retour', stores_path %>
    </div>
  <% else %>
    <div class="panel-footer">
      <%=link_to 'Retour', root_path %>
    </div>
  <% end %>

</div>
